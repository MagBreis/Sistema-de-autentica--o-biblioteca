<%- include("../partials/header"); %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="mt-5">Editar Alunos</h1>
            <form action="/editarAluno" method="POST">
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input class="form-control" type="text" id="nome" name="nome" placeholder="Nome" value="<%= resultado.nome %>">
                </div>
                <div id="displayInfo">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" id="inputEmail4" onblur="validacaoEmail(this)"
                        placeholder="Email" name="email" value="<%= resultado.email %>">
                </div>
                <div class="form-group">
                    <label for="matricula"> Matr√≠cula</label>
                    <input class="form-control" type="number" id="valor" name="matricula" placeholder="000"
                    value="<%= resultado.matricula %>">
                </div>
                <div class="form-group">
                    <label for="turma" >Turma</label>
                    <select class="form-control" name ="turma">
                        <option disabled selected> Escolha</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                    </select>
                </div>
                <input type="hidden" name="id" value="<%= resultado._id %>">
                <button class="btn btn-danger" type="submit">Enviar</button>

            </form>

        </div>

    </div>
</div>







<%- include("../partials/footer"); %>