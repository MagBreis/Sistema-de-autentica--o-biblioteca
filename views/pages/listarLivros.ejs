<%- include("../partials/header"); %>

<section class="container">
    <div class="row">
        <div class="col">
            <div class=" row mt-5">
                <div class="col-6 mg-5">
                    <h1 class="mt-5" style="color:#dc3545">Acervo</h1>
                </div>
               
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Autor</th>
                            <th>Genero</th>
                            <th>ISBN</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% lista_livros.forEach(function(livro){%>
                            <tr>
                                <td>
                                    <%= livro.Titulo %>
                                </td>
                                <td>
                                    <%= livro.Autor %>
                                </td>
                                <td>
                                    <%= livro.Gênero %>
                                </td>
                                <td>
                                    <%= livro.ISBN %>
                                </td>

                                <td>
                                    <a href="editarLivro/<%=livro._id %>" class="btn-warning">Editar</a>
                                    <a href="/deletandoLivros/<%=livro._id %>" class="btn-danger"
                                        onsubmit="confirmarApagar(event)">Apagar</a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<%- include("../partials/footer"); %>
